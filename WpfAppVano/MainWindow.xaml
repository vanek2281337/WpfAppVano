<Window x:Class="WpfAppVano.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppVano"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Логин" HorizontalAlignment="Center"/>
        <TextBox x:Name="TextBox_Login" Height="15" Width="100" Margin="10,10"/>
        <TextBlock Text="Пароль" HorizontalAlignment="Center"/>
        <TextBox x:Name ="TextBox_Password" Height="15" Width="100" Margin="10,10"/>
        <Button Content="Авторизация" Click="Button_Click_Auth" Margin="10,10"/>

    </StackPanel>
</Window>
